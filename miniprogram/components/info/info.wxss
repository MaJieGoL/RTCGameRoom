.container-child-1 {
  width: 100%;
  height: 531.5px;
  position: fixed;
  top: 96px;
  left: 0;
  background-color: #e7e7e7;
  opacity: 0.45;
}

.container-child-2 {
  width: 300px;
  height: 149px;
  position: fixed;
  top: 150px;
  left: 50%;
  margin-left: -150px;
  background-color: #fff;
  border-radius: 5px;
}

.content {
  width: 85%;
  height: 149px;
  margin: auto;
}

.content-child-1 {
  width: 100%;
  height: 73.5px;
  border-bottom: 1px solid #D8D8D8;
  position: relative;
  font-size: 16px;
}

.content-child-1 image {
  position: absolute;
  height: 50px;
  width: 50px;
  margin-top: -25px;
  top: 50%;
}

.content-child-1 text {
  position: absolute;
  left: 70px;
  top: 37px;
}

.content-child-1 view {
  width: 70px;
  height: 28px;
  border: 2px solid #19AD19;
  position: absolute;
  right: 40px;
  top: 50%;
  margin-top: -14px;
  margin-right: -30px;
  line-height: 28px;
  text-align: center;
  font-weight: 500;
  color: #19AD19;
  border-radius: 8px;
}

.content-child-2 {
  width: 100%;
  height: 74.5px;
  display: flex;
  font-size: 16px;
}

.content-child-2-child {
  flex: 1;
}

.content-child-2-child view {
  text-align: center;
}

.content-child-2-child-child-1 {
  margin-top: 10px;
  color: #979797;
}
