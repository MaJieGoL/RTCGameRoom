    <view class="weui-cell weui-cell_switch">
        <view class="weui-cell__bd">开启谋略卡</view>
        <view class="weui-cell__ft">
            <switch checked />
        </view>
    </view>
  </view> -->

  <view class="weui-cells weui-cells_after-title margin-form">
    <view class="weui-cell weui-cell_switch">
        <view class="weui-cell__bd">线下模式</view>
        <view class="weui-cell__ft">
            <switch />
        </view>
    </view>
  </view>

  <button class="weui-btn start-btn" type="primary" bindtap="create">开始游戏</button>
</view>
